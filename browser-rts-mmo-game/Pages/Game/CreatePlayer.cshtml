@page
@model BrowserGame.Pages.Game.CreatePlayerModel

@{
    ViewData["Title"] = "Create Your Account";
}

<h1>Create Your Account</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.VerificationError)) {
                <div class="text-danger">@Model.VerificationError</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Player.Name" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="Player.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capital.Name" class="control-label"></label>
                <input asp-for="CapitalName" class="form-control" />
                <span asp-validation-for="Capital.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back To Main Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
