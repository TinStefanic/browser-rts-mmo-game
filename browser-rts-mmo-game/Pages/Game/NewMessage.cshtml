@page
@using BrowserGame.ModelUtils
@using BrowserGame.Models
@model BrowserGame.Pages.Game.NewMessageModel

@{
    var city = (City)ViewData["City"];
}

<partial name="./Shared/_CommonGameNavigation" view-data="ViewData" />

<div class="row justify-content-center text-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(Model.VerificationErrorMessage)) {
                <div class="text-danger">@Model.VerificationErrorMessage</div>
            }
            <div class="form-group">
                <label asp-for="Message.RecipientName" class="control-label"></label>
                <input asp-for="Message.RecipientName" class="form-control" />
                <span asp-validation-for="Message.RecipientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Title" class="control-label"></label>
                <input asp-for="Message.Title" class="form-control" />
                <span asp-validation-for="Message.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.MessageBody" class="control-label"></label>
                <textarea asp-for="Message.MessageBody" class="form-control" text-wrap:normal type="text" rows="8">
                </textarea>
                <span asp-validation-for="Message.MessageBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<partial name="./Shared/_CommonBuildProgress" view-data="ViewData"/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
